# rename this file .env and start configuring


# general configuration
LANGUAGE_CODE="en-us"
TIME_ZONE="UTC"


# webapp internals
SECRET_KEY=xxx
DEBUG=True
ALLOWED_HOSTS=.localhost, 127.0.0.1
DB_NAME=db.sqlite3


# telegram options
TELEGRAM_API_ID=123
TELEGRAM_API_HASH=xxx
TELEGRAM_PHONE_NUMBER=+123
TELEGRAM_CRAWLER_GRACE_TIME=1
TELEGRAM_CRAWLER_DOWNLOAD_IMAGES=False
TELEGRAM_CRAWLER_DOWNLOAD_VIDEO=False
TELEGRAM_CRAWLER_MESSAGES_LIMIT_PER_CHANNEL=100  # Set to None to disable the limit.


# ForceAtlas2 options
FA2_ITERATIONS=20000


# communities options
COMMUNITIES=ORGANIZATION  # ORGANIZATION, LOUVAIN, KCORE, or INFOMAP
COMMUNITIES_PALETTE=ORGANIZATION  # or any https://python-graph-gallery.com/color-palette-finder/ palette, mind letter case


# drawing options
DRAW_DEAD_LEAVES=False
DEAD_LEAVES_COLOR=#596a64
